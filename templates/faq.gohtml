{{template "header" .}}
<div class="px-4">
  <h1 class="py-4 text-4xl semibold tracking-tight"> FAQ </h1>
<ul>
  {{range .}}
  {{template "perguntas_faq" .}}
  {{end}}
</ul>
</div>
{{template "footer" .}}

{{define "perguntas_faq"}}
<li class="border-t border-indigo-400 py-1 px-2">
  <span class="block text-lg text-gray-880 semibold">{{.Pergunta}}</span>
  <span class="block text-lg text-gray-500">{{.Resposta}}</span>
</li>
{{end}}
